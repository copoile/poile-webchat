}
.en{
  position: absolute;
  right: -18rpx;
}
.last{
  margin-left: 50rpx;
}
.buttom{
  position: absolute;
  height: 160rpx;
  width: 100%;
  bottom: 0rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  text-align: center;
}
 .criticism{
  height:120rpx;
  background:rgb(245, 243, 243);
  position: absolute;
  bottom: 130rpx;
  width: 100%;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
}
.item .cmt1 .name{
  color: #708090;
}
.item .cmt3 .date{
  color: #708090;
}
.criticism .cr-in{
  border: 1rpx solid silver;
  width: 80%;
  height: 65rpx;
  background: white;
}
.criticism .cr-bt{
  margin-left: 30rpx;
  display: inline-block;
  text-overflow: ellipsis;
  white-space: nowrap;
  background:#1E90FF; 
  color: white;
  font-size: 25rpx;
  border-top: 15rpx solid #1E90FF;
  border-bottom: 15rpx solid #1E90FF;
  border-left: 25rpx solid #1E90FF;
  border-right: 25rpx solid #1E90FF;
}
