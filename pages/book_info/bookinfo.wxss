.scroll{
  position: absolute;
  height: 75%;
  width: 100%;
}
.top{
  height: 280rpx;
  background-color:rgb(108, 102, 139);
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.top .img{
  margin-top: 15rpx;
  display: block;
  height: 250rpx;
  width: 200rpx;
  margin-bottom: 15rpx;
  margin-left: 15rpx;
}
.top .desc{
  display: block;
  margin: 45rpx 60rpx;
}
.desc .title{
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin: 15rpx 0;
  color: white;
}
.desc .auther{
  display: block;
  color: white;
}
.desc .isSerial{
  margin: 15rpx 0;
  display: block;
  color: white;
}
.longIntro{
  height: 210rpx;
  border-top: 15rpx solid rgb(245, 243, 243);
  text-overflow: ellipsis;
  overflow: hidden;
}
.longIntro .info{
  color:#708090;
  font-size: 28rpx;
  letter-spacing: 0rpx;

}
.tag{
  display: flex;
  height: 70rpx;
  flex-wrap: wrap;
  align-items: center;
  justify-content: flex-start;
}
.tag .tag-t{
  font-size: 20rpx;
  color:blue;
  border: 3rpx solid blue;
  margin-left: 30rpx; 
}
.catalog{
  height: 80rpx;
  border-top: 15rpx solid rgb(245, 243, 243);
  display: flex;
  align-items: center;
  flex-direction:row;
}
.catalog .t1{
  display: block;
  font-weight: bold;
  color: #1E90FF;
  margin-left: 20rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 35rpx;
}
.catalog .t2{
  display: block;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.catalog .img{
  position: absolute;
  height: 30rpx;
  width: 30rpx;
  opacity: 0.5;
  left: 92%;
}
.comment{
  border-top: 1rpx solid silver;
}
.comment .line{
  height: 50rpx;
  border-bottom:1rpx solid silver;
  display: flex;
  padding-left: 30rpx;
  justify-content: flex-start;
}
.items .item{
  height: 185rpx;
  border-bottom: 1rpx solid silver;
}
.item .cmt1{
  padding-left: 30rpx;
  padding-top: 15rpx; 
}
.item .cmt1 .img{
  position: absolute;
  display: inline-block;
  height: 40rpx;
  width: 40rpx;
  left: 18rpx;
  border-radius: 50%;
}
.item .cmt2{
  padding-left: 30rpx;
  padding-top: 15rpx; 
}
.item .cmt3{
  padding-left: 30rpx;
  padding-top: 15rpx;
}
.item .cmt3 .im{
  position: relative;
  display: inline-block;
  padding: 20prx;
  left: 55%;
}
.item .cmt3 .im .ht{
 height: 30rpx;
 width: 30rpx;
}
.item .cmt3 .im text{
  font-size: 25rpx;
  color: #708090;
}
.item .cmt3 .im .ct{
  display: inline-block;
  position: absolute;
  right: -70rpx;
}
.item .cmt3 .im .imgc{
 position: absolute;
 height: 30rpx;
